<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.itcs.example.sqlitedatabaseapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Personal Contacts"
        android:textColor="#990033"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:id="@+id/app_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" ADD CONTACT"
        android:layout_below="@id/app_title"
        android:background="#FFCCFF"
        android:layout_marginTop="20dp"
        android:onClick="addContacts"
        android:layout_marginBottom="30dp"
        android:id="@+id/btn1"
        android:textSize="20dp"
        android:textColor="#000000"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIEW CONTACT"
        android:layout_below="@id/btn1"
        android:background="#FFCCFF"
        android:layout_marginTop="10dp"
        android:onClick="viewContact"
        android:layout_marginBottom="30dp"
        android:id="@+id/btn2"
        android:textColor="#000000"
        android:textSize="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEARCH CONTACT"
        android:layout_below="@id/btn2"
        android:background="#FFCCFF"
        android:layout_marginTop="10dp"
        android:onClick="searchContacts"
        android:layout_marginBottom="30dp"
        android:id="@+id/btn3"
        android:textColor="#000000"
        android:textSize="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE CONTACT"
        android:layout_below="@id/btn3"
        android:background="#FFCCFF"
        android:layout_marginTop="10dp"
        android:onClick="updateContacts"
        android:layout_marginBottom="30dp"
        android:id="@+id/btn4"
        android:textColor="#000000"
        android:textSize="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DELETE CONTACT"
        android:layout_below="@id/btn4"
        android:background="#FFCCFF"
        android:layout_marginTop="10dp"
        android:onClick="deleteContacts"
        android:layout_marginBottom="30dp"
        android:id="@+id/btn5"
        android:textColor="#000000"
        android:textSize="20dp"/>
</RelativeLayout>
