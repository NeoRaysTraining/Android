<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.itcs.sam.smsapplication.NewSMS_Page"
    tools:showIn="@layout/activity_new_sms__page">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="35sp"
    android:orientation="horizontal"
    android:background="#2c6c8c"
    android:id="@+id/linearLayout">


    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/icon1"
        android:id="@+id/icon1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="New message"
        android:id="@+id/new_sms"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        />
</LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="Enter recipient"
        android:id="@+id/rec"
        android:background="#949494"
        android:inputType="phone"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_marginTop="50dp"
        android:layout_alignEnd="@+id/button" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:inputType="textMultiLine"
        android:ems="15"
        android:id="@+id/mes"
        android:textColor="#ffffff"
        android:hint="Enter message"
        android:gravity="top"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/rec"
        android:layout_marginTop="20dp"
        android:background="#949494"
        android:layout_centerHorizontal="true" />
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="Send"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:id="@+id/button"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:src="@drawable/icon2"
        android:id="@+id/icon2"
        android:paddingLeft="40dp"
        android:layout_alignTop="@+id/rec"
        android:layout_toEndOf="@+id/rec" />

</RelativeLayout>
