<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.itcs.sam.checkboxapplication.CheckBox_Page">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Fruits"
        android:textSize="40sp"
        android:textColor="#000000"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orange"
        android:textColor="#ff7b00"
        android:textSize="30sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:id="@+id/orange"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apple"
        android:textColor="#da0101"
        android:textSize="30sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/apple"
        android:layout_below="@+id/orange"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mango"
        android:textColor="#ffe100"
        android:textSize="30sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/mango"
        android:layout_below="@+id/apple"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chikoo"
        android:textColor="#b4481d"
        android:textSize="30sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/chikoo"
        android:layout_below="@+id/mango"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chikoo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Select"
        android:textColor="#ff000d"
        android:background="#fcc3f6"
        android:id="@+id/button"
        />
</RelativeLayout>
